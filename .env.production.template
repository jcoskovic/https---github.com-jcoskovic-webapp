# Laravel Production Environment Configuration
# Copy this to .env in backend folder and fill in the actual values

# Application
APP_NAME="Abbrevio Demo"
APP_ENV=production
APP_KEY=base64:your-generated-app-key-here
APP_DEBUG=false
APP_URL=https://your-app.up.railway.app
APP_TIMEZONE=UTC

# Database Configuration (Railway will provide these)
DB_CONNECTION=mysql
DB_HOST=railway-mysql-host
DB_PORT=3306
DB_DATABASE=abbrevio
DB_USERNAME=railway-username
DB_PASSWORD=railway-password

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend.up.railway.app

# Mail Configuration (SendGrid recommended for production)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Abbrevio Demo"

# ML Service Configuration
GROQ_API_KEY=your-groq-api-key-here

# Cache and Session (use database for simplicity)
CACHE_DRIVER=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Security
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Broadcasting (disable for demo)
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=local

# Performance
OPTIMIZE_CLEAR_COMPILED=true
VIEW_CACHE_PATH=/tmp