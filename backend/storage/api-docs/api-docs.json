{
  "openapi": "3.0.0",
  "info": {
    "title": "Abbrevio API",
    "description": "API dokumentacija za Abbrevio aplikaciju za upravljanje skraćenicama",
    "version": "1.0.0",
    "contact": {
      "email": "admin@abbrevio.dev"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Development API Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "department": {
            "type": "string",
            "example": "IT"
          },
          "role": {
            "type": "string",
            "example": "user"
          }
        }
      },
      "Abbreviation": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "abbreviation": {
            "type": "string",
            "example": "API"
          },
          "meaning": {
            "type": "string",
            "example": "Application Programming Interface"
          },
          "description": {
            "type": "string",
            "example": "A set of protocols and tools for building applications"
          },
          "category": {
            "type": "string",
            "example": "Technology"
          },
          "upvotes": {
            "type": "integer",
            "example": 5
          },
          "downvotes": {
            "type": "integer",
            "example": 1
          }
        }
      }
    }
  },
  "paths": {
    "/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  },
                  "department": {
                    "type": "string",
                    "example": "IT"
                  }
                },
                "required": ["name", "email", "password", "department"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Korisnik je uspješno kreiran"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "$ref": "#/components/schemas/User"
                        },
                        "token": {
                          "type": "string",
                          "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Uspješna prijava"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "$ref": "#/components/schemas/User"
                        },
                        "token": {
                          "type": "string",
                          "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/abbreviations": {
      "get": {
        "tags": ["Abbreviations"],
        "summary": "Get list of abbreviations",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Search term",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "Category filter",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Abbreviation"
                          }
                        },
                        "current_page": {
                          "type": "integer",
                          "example": 1
                        },
                        "last_page": {
                          "type": "integer",
                          "example": 5
                        },
                        "total": {
                          "type": "integer",
                          "example": 50
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Abbreviations"],
        "summary": "Create new abbreviation",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "abbreviation": {
                    "type": "string",
                    "example": "API"
                  },
                  "meaning": {
                    "type": "string",
                    "example": "Application Programming Interface"
                  },
                  "description": {
                    "type": "string",
                    "example": "A set of protocols and tools for building applications"
                  },
                  "category": {
                    "type": "string",
                    "example": "Technology"
                  }
                },
                "required": ["abbreviation", "meaning", "description", "category"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Abbreviation created successfully"
          }
        }
      }
    },
    "/abbreviations/{id}/vote": {
      "post": {
        "tags": ["Abbreviations"],
        "summary": "Vote on abbreviation",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "vote_type": {
                    "type": "string",
                    "enum": ["up", "down"],
                    "example": "up"
                  }
                },
                "required": ["vote_type"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vote recorded successfully"
          }
        }
      }
    },
    "/export/pdf": {
      "get": {
        "tags": ["Export"],
        "summary": "Export abbreviations to PDF",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "description": "Export format",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["simple", "detailed"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "PDF file",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    },
    "/admin/statistics": {
      "get": {
        "tags": ["Admin"],
        "summary": "Get admin statistics",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Statistics retrieved successfully"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Authentication",
      "description": "User authentication endpoints"
    },
    {
      "name": "Abbreviations",
      "description": "Abbreviation management endpoints"
    },
    {
      "name": "Export",
      "description": "Export functionality endpoints"
    },
    {
      "name": "Admin",
      "description": "Admin-only endpoints"
    }
  ]
}
